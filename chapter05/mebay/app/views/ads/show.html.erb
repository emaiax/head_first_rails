<% content_for :title, " - Ad: " + @ad.name %>

<p id="notice"><b><i><%= notice %></i></b></p>

<p>
  <b>Name:</b>
  <%= @ad.name %>
</p>

<p>
  <b>Description:</b>
  <%= @ad.description %>
</p>

<p>
  <b>Price:</b>
  <%= @ad.price %>
</p>

<p>
  <b>Seller #:</b>
  <%= @ad.seller_id %>
</p>

<p>
  <b>Email:</b>
  <%= @ad.email %>
</p>

<p>
  <%= image_tag(@ad.img_url) %>
</p>

<p>
  <%= link_to 'Back', ads_path %> | 
  <%= link_to 'Edit', edit_ad_path %> |
  <%= link_to 'Destroy', @ad, confirm: 'Are you sure?', method: :delete %>
</p>